    list-style-type: disc;\
    margin-left: 20px;\
    font-size: 0.9em;\
\}\
\
/* --- RESUME PREVIEW STYLING (The paper itself) --- */\
.resume-template \{\
    padding: 40px;\
    min-height: 800px;\
    background-color: #ffffff; /* Use white for the resume to mimic paper for PDF */\
    color: #333; \
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);\
\}\
\
.resume-template .header h1 \{\
    font-size: 2.5em;\
    color: #1a1a2e;\
    border-bottom: 2px solid #333;\
    padding-bottom: 5px;\
\}\
.resume-template .header p \{\
    font-size: 1em;\
    margin-top: 5px;\
\}\
\
.resume-template h3 \{\
    text-transform: uppercase;\
    font-size: 1.1em;\
    color: #1a1a2e;\
    border-bottom: 1px solid #333;\
    padding-bottom: 2px;\
    margin-top: 20px;\
    margin-bottom: 10px;\
\}\
\
.resume-template ul \{\
    list-style-type: disc;\
    margin-left: 20px;\
    margin-bottom: 10px;\
    font-size: 0.95em;\
\}\
\
.job-entry strong \{\
    font-size: 1.1em;\
    color: #1a1a2e;\
    display: block;\
    margin-bottom: 5px;\
\}\
.skills-list \{\
    display: flex;\
    flex-wrap: wrap;\
    list-style: none;\
    margin: 0;\
    padding: 0;\
\}\
.skills-list li \{\
    background-color: #e0e0e0;\
    color: #333;\
    padding: 3px 8px;\
    border-radius: 3px;\
    margin-right: 8px;\
    margin-bottom: 8px;\
    font-family: var(--font-secondary);\
    font-size: 0.85em;\
\}\
\
/* RESPONSIVENESS */\
@media (max-width: 1024px) \{\
    .builder-container \{\
        flex-direction: column;\
        gap: 20px;\
        max-width: 95%;\
    \}\
    .preview-pane \{\
        min-height: auto;\
    \}\
\}}