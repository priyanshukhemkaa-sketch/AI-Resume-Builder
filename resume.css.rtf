\f0\fs24 \cf0 /* --- MODERN DARK THEME CSS --- */\
:root \{\
    --color-bg-dark: #1a1a2e; /* Deep Indigo/Navy */\
    --color-bg-light: #2c394b; /* Lighter Indigo for panels */\
    --color-text-light: #f5f5f5; /* Off-White for body text */\
    --color-text-accent: #ffc72c; /* Vibrant Gold/Yellow accent */\
    --color-border: #4a4e69; /* Soft border color */\
    --font-primary: 'Inter', sans-serif;\
    --font-secondary: 'Roboto Mono', monospace; /* For code/skills */\
\}\
\
/* Basic Reset */\
* \{\
    box-sizing: border-box;\
    margin: 0;\
    padding: 0;\
    font-family: var(--font-primary);\
\}\
\
body \{\
    background-color: var(--color-bg-dark);\
    color: var(--color-text-light);\
    line-height: 1.6;\
\}\
\
header \{\
    background-color: var(--color-bg-light);\
    display: flex;\
    justify-content: space-between;\
    align-items: center;\
    padding: 15px 5%;\
    border-bottom: 3px solid var(--color-text-accent);\
\}\
\
.logo \{\
    font-size: 1.8em;\
    font-weight: 800;\
    color: var(--color-text-accent);\
\}\
\
/* --- BUTTON STYLING --- */\
.btn \{\
    padding: 10px 20px;\
    border: none;\
    border-radius: 4px;\
    font-size: 1em;\
    cursor: pointer;\
    transition: background-color 0.3s;\
\}\
.primary-btn \{\
    background-color: var(--color-text-accent);\
    color: var(--color-bg-dark);\
    font-weight: 700;\
\}\
.primary-btn:hover \{\
    background-color: #ffd76a;\
\}\
\
/* --- MAIN LAYOUT --- */\
.builder-container \{\
    display: flex;\
    max-width: 90%;\
    margin: 20px auto;\
    gap: 30px;\
\}\
\
.input-pane, .preview-pane \{\
    flex: 1; \
    padding: 30px;\
    background-color: var(--color-bg-light);\
    border-radius: 8px;\
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5); /* Stronger shadow for depth */\
\}\
\
.section-title \{\
    color: var(--color-text-accent);\
    margin-bottom: 20px;\
    border-bottom: 1px solid var(--color-border);\
    padding-bottom: 5px;\
\}\
\
/* --- FORM STYLING --- */\
.form-group \{\
    border: 1px solid var(--color-border);\
    border-radius: 4px;\
    padding: 15px;\
    margin-bottom: 20px;\
\}\
legend \{\
    color: var(--color-text-accent);\
    font-weight: 600;\
    padding: 0 10px;\
\}\
\
.input-pane label \{\
    display: block;\
    margin-top: 10px;\
    font-weight: 400;\
    color: var(--color-text-light);\
    font-size: 0.9em;\
\}\
\
.input-pane input, \
.input-pane textarea \{\
    width: 100%;\
    padding: 10px;\
    margin-bottom: 15px;\
    background-color: var(--color-bg-dark);\
    color: var(--color-text-light);\
    border: 1px solid var(--color-border);\
    border-radius: 4px;\
    transition: border-color 0.2s;\
    font-family: var(--font-secondary);\
\}\
.input-pane input:focus, \
.input-pane textarea:focus \{\
    border-color: var(--color-text-accent);\
    outline: none;\
\}\
\
/* --- AI SUGGESTIONS BOX --- */\
.suggestions-box \{\
    margin-top: 30px;\
    padding: 15px;\
    background-color: #162030; /* Slightly darker than the pane */\
    border: 1px solid var(--color-border);\
    border-radius: 4px;\
\}\
.suggestions-box h3 \{\
    color: var(--color-text-accent);\
    margin-bottom: 10px;\
\}\
#ats-score \{\
    font-weight: 700;\
    padding: 5px 0;\
\}\
.score-high \{ color: #4CAF50; \} /* Green */\
.score-medium \{ color: #FFEB3B; \} /* Yellow */\
.score-low \{ color: #F44336; \} /* Red */\
